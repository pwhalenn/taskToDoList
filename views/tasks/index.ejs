<!DOCTYPE html>
<html>
  <head>
    <title>Todo Task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/style.css" />
  </head>
  <body>
    <div class="container mt-4">
      <h2>Daftar Tugas</h2>
      <a href="/tasks/create" class="btn btn-primary">Tambah Tugas</a>
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th>Judul</th>
            <th>Deskripsi</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
            <tbody>
            <% tasks.forEach(task => { %>
            <tr>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td><%= task.completed ? "Selesai" : "Belum Selesai" %></td>
                <td>
                <a href="/tasks/edit/<%= task._id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/tasks/delete/<%= task._id %>" class="btn btn-danger btn-sm">Hapus</a>
                </td>
            </tr>
            <% }) %>
            </tbody>
      </table>
    </div>
  </body>
</html>